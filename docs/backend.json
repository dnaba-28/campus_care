{
  "entities": {
    "Doctor": {
      "title": "Doctor",
      "description": "Represents a doctor in the campus hospital.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the doctor."
        },
        "specialty": {
          "type": "string",
          "description": "The doctor's medical specialty."
        },
        "status": {
          "type": "string",
          "description": "The current status of the doctor (e.g., Available, On Break, Busy).",
          "enum": ["Available", "On Break", "Busy"]
        }
      },
      "required": ["name", "specialty", "status"]
    },
    "SosReport": {
      "title": "SOS Report",
      "description": "Represents an emergency SOS report sent by a user.",
      "type": "object",
      "properties": {
        "userDetails": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "enrollmentNo": { "type": "string" },
            "hostelName": { "type": "string" },
            "roomNo": { "type": "string" },
            "blockNo": { "type": "string" }
          }
        },
        "emergencyType": {
          "type": "string",
          "enum": ["FIRE", "HEALTH", "SAFETY", "ACCIDENT"]
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["userDetails", "emergencyType", "timestamp"]
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "/doctors/{doctorId}": {
      "schema": {
        "$ref": "#/backend/entities/Doctor"
      },
      "description": "Stores real-time information about each doctor, including their availability status and specialty."
    },
    "/sos-reports/{reportId}": {
      "schema": {
        "$ref": "#/backend/entities/SosReport"
      },
      "description": "Stores all emergency SOS reports submitted by users."
    }
  }
}
